{
	"compilerOptions": {
		"esModuleInterop": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"types": ["node"],
		"sourceMap": true,
		"target": "es2018",
		"baseUrl": "./",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "./dist",
		"declaration": true
	},
	"exclude": ["node_modules", "test", "dist"]
}
